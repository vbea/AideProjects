<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="2">
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_location"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_location"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_size"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_size"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_modified"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_modified"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_canread"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_canread"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_canwrite"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_canwrite"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/file_info_ishidden"
                android:padding="3dip"
                android:gravity="right"
                style="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/information_ishidden"
                android:padding="3dip"
                style="?android:attr/textAppearanceSmall" />
        </TableRow>
    </TableLayout>
</ScrollView>